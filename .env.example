# Server Configuration
BIND=0.0.0.0
PORT=8080

# JWT Configuration
JWT_SECRET=changeme-generate-a-secure-secret-here
JWT_ISS=axon88
JWT_AUD=control
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Development Mode (enables /api/token/dev endpoint - DISABLE IN PRODUCTION)
DEV_MODE=true

# Production Mode (enforces secure configuration - blocks startup if JWT_SECRET=changeme or DEV_MODE=true)
# Set PRODUCTION_MODE=true when deploying to production
PRODUCTION_MODE=false

# CORS Configuration
CORS_ORIGINS=*

# File Operations
FILES_ROOT=/home/runner/axon-core
DEFAULT_CWD=/home/runner/axon-core

# Command Whitelist (comma-separated)
ALLOWED_CMDS=/usr/bin/ls,/usr/bin/cat,/usr/bin/tail,/usr/bin/df,/usr/bin/systemctl,/usr/bin/docker,/usr/bin/nvidia-smi,/usr/bin/free,/usr/bin/uptime

# n8n Integration
N8N_BASE_URL=
N8N_API_KEY=

# LLM Providers - Cloud
OPENAI_API_KEY=
GEMINI_API_KEY=
DEEPSEEK_API_KEY=

# LLM Providers - Local
OLLAMA_BASE_URL=http://127.0.0.1:11434
SDXL_BASE_URL=http://127.0.0.1:7860

# Tunnel Services (systemd service names)
CF_SERVICE_NAME=cloudflared
TAILSCALE_SERVICE_NAME=tailscaled

# Audit Logging
AUDIT_LOG_PATH=logs/audit.jsonl
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

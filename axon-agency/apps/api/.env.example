# ===================================================
# AXON AGENCY - API ENVIRONMENT VARIABLES
# ===================================================
# Copiar a .env y completar con valores reales
# Ver docs/SECRETS_MATRIX.md para documentación completa
# ===================================================

# ===================================================
# CORE / INFRAESTRUCTURA
# ===================================================

# Server Configuration
BIND=0.0.0.0
PORT=8080

# Mode Flags
PRODUCTION_MODE=false
DEV_MODE=true  # ⚠️ WARNING: Desactiva autenticación - SOLO desarrollo

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001

# ===================================================
# BASE DE DATOS Y ALMACENAMIENTO
# ===================================================

# PostgreSQL (Principal)
DATABASE_URL=postgresql+psycopg://axon:axon@localhost:5432/axon

# MongoDB (WhatsApp Sales Agent)
MONGODB_URI=  # mongodb+srv://user:pass@cluster.mongodb.net/
MONGODB_DB_NAME=whatsapp_sales_agent

# Redis (Jobs & Cache)
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_ROOT=./storage

# ===================================================
# JWT AUTHENTICATION
# ===================================================

JWT_SECRET=change-me-in-production  # ⚠️ CAMBIAR en producción
JWT_ISS=axon
JWT_AUD=control
JWT_EXPIRATION_MINUTES=1440

# ===================================================
# LLM PROVIDERS
# ===================================================

# OpenAI (Obligatorio)
OPENAI_API_KEY=  # sk-proj-...
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o

# Google Gemini (Opcional - Fallback)
GEMINI_API_KEY=  # AIzaSy...
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_FLASH_MODEL=gemini-2.0-flash-exp

# Ollama (Opcional - Local LLM para dev)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1

# LLM Router
LLM_ROUTER_ENABLED=true

# Embeddings (Vector/RAG)
EMBEDDING_MODEL=text-embedding-3-large  # OpenAI model for vector embeddings

# ===================================================
# WHATSAPP CLÁSICO (DEPLOY VÍA N8N)
# ===================================================

N8N_WHATSAPP_DEPLOY_WEBHOOK_URL=  # https://n8n.example.com/webhook/whatsapp-deploy

# ===================================================
# WHATSAPP SALES AGENT (Template Full IntegraIA)
# ===================================================

# Melvis (RAG / Vector Store) - Opcional
MELVIS_API_URL=  # https://melvis.example.com/api
MELVIS_API_KEY=  # mlv_abc123...
MELVIS_COLLECTION=kb_sales

# Tavily (Web Search) - Opcional
TAVILY_API_KEY=  # tvly-abc123...

# LinkedIn (Lead Enrichment) - Opcional
LINKEDIN_API_KEY=  # lin_abc123...
LINKEDIN_BASE_URL=https://api.linkedin.com/v2

# Stripe (Payment Checkout) - Opcional
STRIPE_SECRET_KEY=  # sk_live_... o sk_test_...
STRIPE_PRICE_ID=  # price_1ABC123...
STRIPE_SUCCESS_URL=https://dania.agency/gracias
STRIPE_CANCEL_URL=https://dania.agency/cancelado

# Cal.com (Booking/Scheduling) - Opcional
CALCOM_BOOKING_LINK=https://cal.com/dania-agency/consulta-gratuita

# ===================================================
# SOCIAL AUTOPILOTS / AYRSHARE
# ===================================================

AYRSHARE_API_KEY=  # ayr_abc123...
AYRSHARE_BASE_URL=https://app.ayrshare.com/api
ENABLE_AYRSHARE_SOCIAL=false

# ===================================================
# TELEGRAM DEPLOY
# ===================================================

TELEGRAM_BOT_TOKEN=  # 123456:ABC-DEF1234gh... (obtener de @BotFather)
TELEGRAM_BASE_URL=https://api.telegram.org
DEFAULT_TELEGRAM_CHAT_ID=  # 123456789 o @channel_username (fallback global)
ENABLE_TELEGRAM_DEPLOY=false

# ===================================================
# SERVICIOS EXTERNOS
# ===================================================

# n8n (Workflow Automation)
N8N_BASE_URL=http://127.0.0.1:5679
N8N_API_KEY=  # n8n_abc123...

# Axon Core Integration
AXON_CORE_API_BASE=https://cheque-noticed-wedding-beings.trycloudflare.com
AXON_CORE_API_TOKEN=  # axc_abc123...
AXON_CORE_ENABLED=true

# ===================================================
# AUTONOMOUS AGENT SYSTEM
# ===================================================

AUTONOMOUS_AGENT_ARCHITECT_ENABLED=true
AUTONOMOUS_AGENT_REVIEW_COUNCIL_ENABLED=true

# ===================================================
# NOTAS
# ===================================================
# 
# 1. NUNCA commitear este archivo con valores reales
